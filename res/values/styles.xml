<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:buttonStyle">@style/ThemeButton</item>
        <item name="android:textViewStyle">@style/ThemeTextView</item>
        <item name="android:editTextStyle">@style/ThemeEditText</item>
        
    </style>

    <style name="ThemeButton" parent="android:style/Widget.Button">
        <item name="android:textColor">#8B0000</item>
        <item name="android:background">@drawable/button_dagger</item>
        <item name="android:textSize">30sp</item>
	</style>
	
    <style name="ThemeTextView" parent="android:style/Widget.TextView">
        <item name="android:textColor">#8B0000</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">25sp</item>
	</style>
	
    <style name="ThemeEditText" parent="android:style/Widget.EditText">
        <item name="android:textColor">#8B0000</item>
        <item name="android:background">@drawable/wotr_edittext</item>
        <item name="android:textSize">25sp</item>
	</style>
	

    <style name="ButtonSize" parent="ThemeButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    
    <style name="TextViewSize" parent="ThemeTextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    
    <style name="ButtonLandSize" parent="ThemeButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>
    
    <style name="TextViewLandSize" parent="ThemeTextView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>
    
    <style name="EditTextLandSize" parent="ThemeEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

</resources>