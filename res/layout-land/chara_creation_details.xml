<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchemin_vierge_hor"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <fr.eurecom.warhammerontheroad.application.WotrTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name" />

        <fr.eurecom.warhammerontheroad.application.WotrTextView
            android:id="@+id/chosedName"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <fr.eurecom.warhammerontheroad.application.WotrTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/race" />

        <Spinner
            android:id="@+id/spinRace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:prompt="@string/race" />

        <fr.eurecom.warhammerontheroad.application.WotrTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/carrier" />

        <Spinner
            android:id="@+id/spinChooseCarrier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:prompt="@string/carrier" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@drawable/frise_dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:text="@string/age" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:text="@string/eye_color" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:text="@string/hair_color" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:text="@string/birth_place" />
                    
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"                    
                    android:orientation="vertical"
                    android:layout_weight="3">
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtCharaCreaDetailsAge"
                    style="@style/TextViewLandSize"/>
                    
                    <fr.eurecom.warhammerontheroad.application.WotrEditText
                    android:id="@+id/editCharaCreaDetailsEyeColor"
                    style="@style/EditTextLandSize"/>
                    
                    <fr.eurecom.warhammerontheroad.application.WotrEditText
                    android:id="@+id/editCharaCreaDetailsHairColor"
                    style="@style/EditTextLandSize" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtCharaCreaDetailsBirthPlace"
                    style="@style/TextViewLandSize" />
                    
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:paddingLeft="10dp"
                    android:text="@string/sexe" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:paddingLeft="10dp"
                    android:text="@string/size" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:paddingLeft="10dp"
                    android:text="@string/weight" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:paddingLeft="10dp"
                    android:text="@string/siblings_number" />
                    
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    
                    <Spinner
                    android:id="@+id/spinSexe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:layout_marginTop="0dp"
                    />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtCharaCreaDetailsSize"
                    style="@style/TextViewLandSize" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtCharaCreaDetailsWeight"
                    style="@style/TextViewLandSize" />
                    
                    <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtCharaCreaDetailsSiblingsNumber"
                    style="@style/TextViewLandSize" />
                    
                </LinearLayout>
			</LinearLayout>
            <fr.eurecom.warhammerontheroad.application.WotrButton
                android:id="@+id/btnCharaDetailsNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:onClick="next"
                android:text="@string/terminate" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>