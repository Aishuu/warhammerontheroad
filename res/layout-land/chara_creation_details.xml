<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchemin_vierge_hor"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <fr.eurecom.warhammerontheroad.WotrTextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/name" />

        <fr.eurecom.warhammerontheroad.WotrEditText
            android:id="@+id/chosedName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <fr.eurecom.warhammerontheroad.WotrTextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/race" />

        <Spinner
            android:id="@+id/spinRace"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:src="@drawable/frise_red" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/age" />

                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:id="@+id/txtCharaCreaDetailsAge"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/eye_color" />

                    <fr.eurecom.warhammerontheroad.WotrEditText
                        android:id="@+id/editCharaCreaDetailsEyeColor"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/hair_color" />

                    <fr.eurecom.warhammerontheroad.WotrEditText
                        android:id="@+id/editCharaCreaDetailsHairColor"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/birth_place" />

                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:id="@+id/txtCharaCreaDetailsBirthPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/sexe" />

                    <Spinner
                        android:id="@+id/spinSexe"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/size" />

                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:id="@+id/txtCharaCreaDetailsSize"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/weight" />

                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:id="@+id/txtCharaCreaDetailsWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/siblings_number" />

                    <fr.eurecom.warhammerontheroad.WotrTextView
                        android:id="@+id/txtCharaCreaDetailsSiblingsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <fr.eurecom.warhammerontheroad.WotrButton
        android:id="@+id/btnCharaDetailsNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:text="@string/next" />

</LinearLayout>