<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchemin_vierge_vert"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StatsObjectActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
        
        <!-- Put object -->
        <fr.eurecom.warhammerontheroad.application.WotrTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/weapon"
            />
        
        <WebView
            android:id="@+id/statsObjectWeapons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
             />
        
        <fr.eurecom.warhammerontheroad.application.WotrTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/armor"
            />
        
        <WebView
            android:id="@+id/statsObjectArmor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:contentDescription="@null"
            android:src="@drawable/frise_dark" />

        <!-- Details -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:text="@string/age" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:text="@string/eye_color" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:text="@string/hair_color" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:text="@string/birth_place" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtSeeStatsAge"
                    style="@style/TextViewLandSize" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtSeeStatsEyeColor"
                    style="@style/TextViewLandSize" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtSeeStatsHairColor"
                    style="@style/TextViewLandSize" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtSeeStatsBirthPlace"
                    style="@style/TextViewLandSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:paddingLeft="10dp"
                    android:text="@string/sexe" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:paddingLeft="10dp"
                    android:text="@string/size" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:paddingLeft="10dp"
                    android:text="@string/weight" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    style="@style/TextViewLandSize"
                    android:paddingLeft="10dp"
                    android:text="@string/siblings_number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtSeeStatsGender"
                    style="@style/TextViewLandSize" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtSeeStatsSize"
                    style="@style/TextViewLandSize" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtSeeStatsWeight"
                    style="@style/TextViewLandSize" />

                <fr.eurecom.warhammerontheroad.application.WotrTextView
                    android:id="@+id/txtSeeStatsSiblingsNumber"
                    style="@style/TextViewLandSize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>